        {
          "name": "Update Status (Admin) - Pending -> Shipped",
          "request": {
            "auth": { "type": "noauth" },
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json", "type": "text" },
              { "key": "Authorization", "value": "Bearer {{token_admin}}", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Shipped\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/orders/{{orderId}}/status"
          },
          "response": []
        },
        {
          "name": "Update Status (Admin) - Shipped -> Delivered",
          "request": {
            "auth": { "type": "noauth" },
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json", "type": "text" },
              { "key": "Authorization", "value": "Bearer {{token_admin}}", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Delivered\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/orders/{{orderId}}/status"
          },
          "response": []
        }
      ]
