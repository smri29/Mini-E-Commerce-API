    {
      "name": "01 - Auth",
      "item": [
        {
          "name": "Register Admin (Expected 403 without key)",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json", "type": "text" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin No Key\",\n  \"email\": \"admin-no-key@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"admin\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/auth/register"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Returns 403/400 when admin key is not provided', function () {",
                  "  pm.expect([400, 403]).to.include(pm.response.code);",
                  "});"
                ]
              }
            }
          ],
          "response": []
        },
        {
          "name": "Register Admin (Protected)",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json", "type": "text" },
              { "key": "x-admin-signup-key", "value": "{{adminSignupKey}}", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin User\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"admin\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/auth/register"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "let json = {};",
                  "try { json = pm.response.json(); } catch (e) {}",
                  "pm.test('Register admin returns 201/400/403', function () {",
                  "  pm.expect([201, 400, 403]).to.include(pm.response.code);",
                  "});",
                  "if (json.token) pm.collectionVariables.set('token_admin', json.token);",
                  "if (json.data && json.data.user && json.data.user.email) pm.collectionVariables.set('adminEmail', json.data.user.email);"
                ]
              }
            }
          ],
          "response": []
        },
        {
          "name": "Register User (Customer)",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json", "type": "text" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/auth/register"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "let json = {};",
                  "try { json = pm.response.json(); } catch (e) {}",
                  "pm.test('Register user returns 201 or 400', function () {",
                  "  pm.expect([201, 400]).to.include(pm.response.code);",
                  "});",
                  "if (json.token) pm.collectionVariables.set('token_user', json.token);",
                  "if (json.data && json.data.user && json.data.user.email) pm.collectionVariables.set('userEmail', json.data.user.email);"
                ]
              }
            }
          ],
          "response": []
        },
        {
