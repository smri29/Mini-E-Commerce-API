    {
      "name": "02 - Products",
      "item": [
        {
          "name": "Create Product (Admin) (sets productId)",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json", "type": "text" },
              { "key": "Authorization", "value": "Bearer {{token_admin}}", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Laptop\",\n  \"description\": \"High end laptop\",\n  \"price\": 1200,\n  \"stock\": 5,\n  \"category\": \"Tech\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/products"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "let json = {};",
                  "try { json = pm.response.json(); } catch (e) {}",
                  "pm.test('Create product returns 201 or auth/validation error', function () {",
                  "  pm.expect([201, 400, 401, 403]).to.include(pm.response.code);",
                  "});",
                  "if (json.data && json.data.product && json.data.product._id) {",
                  "  pm.collectionVariables.set('productId', json.data.product._id);",
                  "}"
                ]
              }
            }
          ],
          "response": []
        },
        {
          "name": "Get All Products (Public)",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/products"
          },
          "response": []
        },
        {
          "name": "Get Products (Filtered)",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/products?q=laptop&category=Tech&minPrice=100&maxPrice=5000&page=1&limit=20&sort=-price"
          },
          "response": []
        },
        {
          "name": "Get Single Product",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/products/{{productId}}"
          },
          "response": []
        },
        {
          "name": "Update Product (Admin)",
          "request": {
            "auth": { "type": "noauth" },
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json", "type": "text" },
              { "key": "Authorization", "value": "Bearer {{token_admin}}", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 1100,\n  \"stock\": 10\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/products/{{productId}}"
          },
          "response": []
        },
        {
          "name": "Delete Product (Soft Delete) (Admin)",
          "request": {
            "auth": { "type": "noauth" },
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token_admin}}", "type": "text" }],
            "url": "{{baseUrl}}/products/{{productId}}"
          },
          "response": []
        }
      ]
    },
    {
      "name": "03 - Cart",
      "item": [
        {
          "name": "Get My Cart",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token_user}}", "type": "text" }],
            "url": "{{baseUrl}}/cart"
          },
          "response": []
        },
        {
          "name": "Add To Cart (sets cartItemId)",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json", "type": "text" },
              { "key": "Authorization", "value": "Bearer {{token_user}}", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 2\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/cart"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "let json = {};",
                  "try { json = pm.response.json(); } catch (e) {}",
                  "pm.test('Add to cart returns 200 or expected client/auth errors', function () {",
                  "  pm.expect([200, 400, 401, 403, 404]).to.include(pm.response.code);",
                  "});",
                  "if (json.data && json.data.cart && Array.isArray(json.data.cart.items)) {",
                  "  const pid = pm.collectionVariables.get('productId');",
                  "  const matched = json.data.cart.items.find(i => i.productId === pid || (i.productId && i.productId._id === pid));",
                  "  const item = matched || json.data.cart.items[0];",
                  "  if (item && item._id) pm.collectionVariables.set('cartItemId', item._id);",
                  "}"
                ]
              }
            }
          ],
          "response": []
        },
        {
          "name": "Update Cart Item Quantity (PATCH)",
          "request": {
            "auth": { "type": "noauth" },
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json", "type": "text" },
              { "key": "Authorization", "value": "Bearer {{token_user}}", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 3\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/cart/{{cartItemId}}"
          },
          "response": []
        },
        {
          "name": "Remove From Cart (DELETE)",
          "request": {
            "auth": { "type": "noauth" },
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token_user}}", "type": "text" }],
            "url": "{{baseUrl}}/cart/{{cartItemId}}"
          },
          "response": []
        }
      ]
    },
